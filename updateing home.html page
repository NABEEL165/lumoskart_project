            <!-- Scripts -->
            <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
            <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
            <script src="{% static 'js/main.js' %}"></script>
            <script>
                // Handle Add to Cart and Buy Now buttons
                document.addEventListener('DOMContentLoaded', function () {
                    // Influencers Swiper
                    const influencersSwiper = new Swiper(".influencers-swiper", {
                        slidesPerView: 2,
                        spaceBetween: 10,
                        navigation: {
                            nextEl: ".influencers-swiper .swiper-button-next",
                            prevEl: ".influencers-swiper .swiper-button-prev",
                        },
                        loop: false,
                        watchOverflow: true,
                        grabCursor: true,
                        centeredSlides: false,
                        breakpoints: {
                            320: { slidesPerView: 1.5, spaceBetween: 10 },
                            480: { slidesPerView: 2.5, spaceBetween: 12 },
                            640: { slidesPerView: 3, spaceBetween: 15 },
                            768: { slidesPerView: 3.5, spaceBetween: 18 },
                            992: { slidesPerView: 4, spaceBetween: 20 },
                            1200: { slidesPerView: 5, spaceBetween: 20 },
                            1400: { slidesPerView: 6, spaceBetween: 20 }
                        }
                    });

                    // Products Swiper
                    const productsSwiper = new Swiper(".products-swiper", {
                        slidesPerView: 1,
                        spaceBetween: 12,
                        navigation: {
                            nextEl: ".products-swiper .swiper-button-next",
                            prevEl: ".products-swiper .swiper-button-prev",
                        },
                        loop: false,
                        watchOverflow: true,
                        grabCursor: true,
                        centeredSlides: false,
                        breakpoints: {
                            320: { slidesPerView: 1, spaceBetween: 10 },
                            480: { slidesPerView: 1.2, spaceBetween: 15 },
                            640: { slidesPerView: 1.5, spaceBetween: 18 },
                            768: { slidesPerView: 2, spaceBetween: 20 },
                            992: { slidesPerView: 2.5, spaceBetween: 20 },
                            1200: { slidesPerView: 3, spaceBetween: 20 }
                        }
                    });

                    // Handle language selection
                    const languageItems = document.querySelectorAll('.lang-option');
                    languageItems.forEach(item => {
                        item.addEventListener('click', function (e) {
                            e.preventDefault();
                            const selectedLang = this.getAttribute('data-lang');
                            const languageName = selectedLang === 'en' ? 'English' : 'Arabic';

                            // Update the displayed language in both desktop and mobile
                            document.getElementById('currentLanguage').textContent = languageName;
                            document.getElementById('mobileCurrentLanguage').textContent = languageName;

                            // Add visual feedback
                            this.closest('.dropdown-menu').previousElementSibling.classList.add('btn-success');
                            setTimeout(() => {
                                this.closest('.dropdown-menu').previousElementSibling.classList.remove('btn-success');
                            }, 1000);

                            // In a real implementation, you would:
                            // 1. Set a language cookie or session variable
                            // 2. Redirect to the same page with the language parameter
                            // 3. Or use AJAX to dynamically change the content
                        });
                    });

                    // Handle button clicks
                    document.addEventListener('click', function (e) {
                        if (e.target.closest('.add-to-cart')) {
                            // Redirect to login page when Add to Cart is clicked
                            window.location.href = '{% url "login" %}';
                        }

                        if (e.target.closest('.buy-now')) {
                            // Redirect to login page when Buy Now is clicked
                            window.location.href = '{% url "login" %}';
                        }
                    });
                });

                document.addEventListener('DOMContentLoaded', function () {
                    const whatsappButton = document.getElementById('whatsapp-button');
                    let isClickAllowed = true;
                    const cooldownTime = 2000; // 2 seconds cooldown

                    whatsappButton.addEventListener('click', function (event) {
                        if (!isClickAllowed) {
                            event.preventDefault(); // Prevent multiple rapid clicks
                            return;
                        }

                        isClickAllowed = false;
                        setTimeout(function () {
                            isClickAllowed = true; // Re-enable clicks after cooldown
                        }, cooldownTime);

                        // Optional: Log click for debugging
                        console.log('WhatsApp button clicked');
                    });
                });

                // Ensure search forms work correctly
                document.addEventListener('DOMContentLoaded', function () {
                    // Desktop search form submission
                    const desktopSearchForm = document.querySelector('.desktop-view .search-container form');
                    if (desktopSearchForm) {
                        desktopSearchForm.addEventListener('submit', function (e) {
                            const searchInput = this.querySelector('input[name="q"]');
                            if (searchInput && searchInput.value.trim() === '') {
                                e.preventDefault();
                                searchInput.focus();
                                return false;
                            }
                        });
                    }

                    // Mobile search form submission
                    const mobileSearchForm = document.querySelector('#searchOffcanvas form');
                    if (mobileSearchForm) {
                        mobileSearchForm.addEventListener('submit', function (e) {
                            const searchInput = this.querySelector('input[name="q"]');
                            if (searchInput && searchInput.value.trim() === '') {
                                e.preventDefault();
                                searchInput.focus();
                                return false;
                            }
                        });
                    }

                    // Handle Enter key in search inputs
                    const searchInputs = document.querySelectorAll('input[name="q"]');
                    searchInputs.forEach(input => {
                        input.addEventListener('keypress', function (e) {
                            if (e.key === 'Enter') {
                                const form = this.closest('form');
                                if (form && this.value.trim() !== '') {
                                    form.submit();
                                } else if (this.value.trim() === '') {
                                    e.preventDefault();
                                    this.focus();
                                }
                            }
                        });
                    });
                });

                // ===============================
                // ðŸŽ¥ Product Reels Functionality
                // ===============================
                document.addEventListener('DOMContentLoaded', function () {
                    const videoShortsWrapper = document.querySelector('.video-shorts-swiper');
                    const videoCount = document.getElementById('video-count');

                    console.log('Video Reels Section:', videoShortsWrapper ? 'Found' : 'Not Found');
                    console.log('Video Count:', videoCount ? videoCount.textContent : 'Unknown');

                    if (videoShortsWrapper) {
                        // Check if there are any slides
                        const slides = videoShortsWrapper.querySelectorAll('.swiper-slide');
                        console.log('Number of video slides:', slides.length);

                        if (slides.length > 0) {
                            const videoShortsSwiper = new Swiper('.video-shorts-swiper', {
                                direction: 'vertical',
                                slidesPerView: 1,
                                spaceBetween: 24,
                                mousewheel: true,
                                pagination: {
                                    el: '#videoShortsPagination',
                                    clickable: true,
                                    bulletClass: 'video-shorts-pagination-dot',
                                    bulletActiveClass: 'active',
                                },
                                on: {
                                    slideChange: function () {
                                        // Update pagination dots
                                        const dots = document.querySelectorAll('#videoShortsPagination .video-shorts-pagination-dot');
                                        dots.forEach((dot, index) => {
                                            if (index === this.activeIndex) {
                                                dot.classList.add('active');
                                            } else {
                                                dot.classList.remove('active');
                                            }
                                        });
                                    }
                                }
                            });

                            // Set fallback poster for videos
                            document.querySelectorAll('.video-shorts-video').forEach(video => {
                                video.addEventListener('error', function () {
                                    console.error('Video load error:', this.src);
                                    this.poster = '{% static "images/video-placeholder.jpg" %}';
                                });
                            });

                            const getVideos = () => Array.from(document.querySelectorAll('.video-shorts-video'));

                            const pauseAllVideos = () => {
                                getVideos().forEach(video => {
                                    video.pause();
                                    video.currentTime = 0;
                                });
                            };

                            const playActiveVideo = () => {
                                const activeSlide = videoShortsWrapper.querySelector('.swiper-slide-active video');
                                if (!activeSlide) return;
                                const playPromise = activeSlide.play();
                                if (playPromise !== undefined) {
                                    playPromise.catch(() => {
                                        // Autoplay may require user interaction; ignore errors.
                                    });
                                }
                            };

                            playActiveVideo();

                            videoShortsSwiper.on('slideChangeTransitionStart', pauseAllVideos);
                            videoShortsSwiper.on('slideChangeTransitionEnd', playActiveVideo);

                            getVideos().forEach(video => {
                                video.addEventListener('play', () => {
                                    getVideos()
                                        .filter(other => other !== video)
                                        .forEach(other => other.pause());
                                });
                            });
                        } else {
                            console.log('No video slides found - showing empty state');
                        }
                    } else {
                        console.log('Video shorts wrapper not found');
                    }

                    // Handle "Add to Cart" actions from reels
                    document.addEventListener('click', function (e) {
                        if (e.target.closest('.video-shorts-action-btn[data-product-id]')) {
                            const button = e.target.closest('.video-shorts-action-btn');
                            const productId = button.getAttribute('data-product-id');
                            alert('Product added to cart! Product ID: ' + productId);
                        }
                    });
                });
            </script>
</body>

</html>

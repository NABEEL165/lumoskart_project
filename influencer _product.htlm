





<!DOCTYPE html>
{% load static %}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Influencer Products</title>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #0e0d0d;
            color: #e0e0e0;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #121212;
            padding: 15px 30px;
            color: #4CAF50;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            border-bottom: 3px solid #fff;
            position: relative;
            z-index: 1000;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            z-index: 1002;
        }

        .logo-img {
            height: 45px;
            width: auto;
            filter: brightness(1.1) drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
            transition: all 0.3s ease;
        }

        .logo-img:hover {
            transform: scale(1.08);
            filter: brightness(1.2) drop-shadow(0 4px 12px rgba(0, 0, 0, 0.4));
        }

        .navbar-links {
            display: flex;
            align-items: center;
        }

        .navbar-links a {
            color: #e0e0e0;
            text-decoration: none;
            margin-left: 25px;
            transition: color 0.3s ease;
            font-weight: 500;
        }

        .navbar-links a:hover {
            color: #4CAF50;
            text-decoration: none;
        }

        .navbar-links i {
            margin-right: 5px;
            color: #fff;
        }

        /* Hamburger Menu */
        .hamburger {
            display: none;
            flex-direction: column;
            cursor: pointer;
            z-index: 1002;
            background: none;
            border: none;
            padding: 5px;
        }

        .hamburger span {
            width: 25px;
            height: 3px;
            background-color: #fff;
            margin: 3px 0;
            transition: all 0.3s ease;
            border-radius: 3px;
        }

        .hamburger.active span:nth-child(1) {
            transform: rotate(45deg) translate(8px, 8px);
        }

        .hamburger.active span:nth-child(2) {
            opacity: 0;
        }

        .hamburger.active span:nth-child(3) {
            transform: rotate(-45deg) translate(8px, -8px);
        }

        /* Page Title */
        .page-title {
            text-align: center;
            margin: 30px 0;
            color: #4CAF50;
            font-size: 32px;
            font-weight: 600;
        }

        /* Search Form */
        .search-container {
            background-color: #1a1a1a;
            padding: 20px;
            border-radius: 10px;
            max-width: 800px;
            margin: 0 auto 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            border: 1px solid #32a852;
        }

        .search-form {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }

        .search-form input,
        .search-form select {
            padding: 12px 15px;
            border: 1px solid #32a852;
            border-radius: 5px;
            background-color: #212121;
            color: #e0e0e0;
            flex-grow: 1;
        }

        .search-form input::placeholder {
            color: #888;
        }

        .search-form select {
            min-width: 150px;
        }

        .search-form button {
            padding: 12px 25px;
            background-color: #2e7d32;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .search-form button:hover {
            background-color: #1b5e20;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
        }

        /* Grid Container */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Product Card */
        .product-card {
            position: relative;
            border: 1px solid #fff;
            padding: 20px;
            border-radius: 10px;
            background: #1a1a1a;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.3), 0 0 10px rgba(76, 175, 80, 0.2);
        }

        .wishlist-form {
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 10;
        }

        .wishlist-btn {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            transition: transform 0.3s ease;
            filter: drop-shadow(0 0 3px rgba(0, 0, 0, 0.3));
        }

        .wishlist-btn:hover {
            transform: scale(1.2);
        }

        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .product-name {
            margin: 0;
            font-size: 20px;
            font-weight: bold;
            color: #fff;
        }

        .product-price {
            font-size: 20px;
            font-weight: bold;
            color: #e0e0e0;
            margin: 10px 0;
        }

        .product-description {
            color: #b0b0b0;
            margin-bottom: 15px;
            flex-grow: 1;
        }

        .product-stock {
            color: #888;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin: 10px 0;
                border: 1px solid #d2e2d6;
            transition: transform 0.3s ease;
        }

        .product-image:hover {
            transform: scale(1.03);
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .action-buttons form {
            flex: 1;
        }

        .action-buttons button {
            width: 100%;
            padding: 12px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-cart {
            background-color: #2e7d32;
        }

        .btn-cart:hover {
            background-color: #1b5e20;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
        }

        .btn-buy {
            background-color: #b71c1c;
        }

        .btn-buy:hover {
            background-color: #d32f2f;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(183, 28, 28, 0.3);
        }

        /* No Products Message */
        .no-products {
            text-align: center;
            color: #b0b0b0;
            font-size: 18px;
            margin: 50px 0;
            padding: 20px;
            background-color: #1a1a1a;
            border-radius: 10px;
            border: 1px solid #32a852;
            max-width: 600px;
            margin: 50px auto;
        }

        /* Section divider */
        .section-divider {
            height: 3px;
            background: linear-gradient(90deg, transparent, #fff, transparent);
            margin: 30px auto;
            border-radius: 2px;
            max-width: 1200px;
        }

        /* Mobile Navigation Overlay */
        .nav-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            z-index: 999;
        }

        .nav-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .navbar {
                padding: 15px;
            }

            .logo-img {
                height: 35px;
            }

            .hamburger {
                display: flex;
            }

            .navbar-links {
                position: fixed;
                top: 0;
                right: -100%;
                height: 100vh;
                width: 70%;
                max-width: 300px;
                background-color: #121212;
                flex-direction: column;
                align-items: flex-start;
                padding: 80px 2rem 2rem 2rem;
                transition: right 0.3s ease;
                box-shadow: -2px 0 10px rgba(0, 0, 0, 0.5);
                overflow-y: auto;
                z-index: 1001;
                border-left: 3px solid #fff;
            }

            .navbar-links.active {
                right: 0;
            }

            .navbar-links a {
                margin: 0 0 1.5rem 0;
                width: 100%;
                font-size: 1.1rem;
                display: block;
                padding: 0.8rem 0;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

            .navbar-links a:last-child {
                border-bottom: none;
            }

            .search-form {
                flex-direction: column;
            }

            .search-form input,
            .search-form select,
            .search-form button {
                width: 100%;
                margin-bottom: 10px;
            }

            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 1.5rem;
                padding: 1rem 0;
            }

            .page-title {
                font-size: 24px;
                margin: 20px 0;
            }

            .search-container {
                margin: 0 15px 20px;
            }
        }

        @media (max-width: 576px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 10px;
                padding: 10px;
            }

            .product-card {
                padding: 1rem;
            }

            .product-name {
                font-size: 1rem;
            }

            .product-price {
                font-size: 1.2rem;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-buttons form {
                width: 100%;
            }

            .product-image {
                height: 150px;
            }
        }

        @media (max-width: 480px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 8px;
                padding: 8px;
            }

            .product-image {
                height: 120px;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-buttons form {
                width: 100%;
            }

            .product-name {
                font-size: 0.9rem;
            }

            .product-price {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Overlay for mobile menu -->
    <div class="nav-overlay" id="navOverlay"></div>

    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-brand">
            <img src="{% static 'accounts/images/lumoskart-logo.png' %}" alt="Lumoskart Logo" class="logo-img">
        </div>

        <button class="hamburger" id="hamburger" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="navbar-links" id="navLinks">
            <a href="{% url 'wishlist' %}"><i class="far fa-heart"></i> Wishlist</a>
            <a href="{%url 'view_cart' %}"><i class="fas fa-shopping-cart"></i> Cart</a>
            <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>


    {% comment %} <!-- Search Section -->
    <div class="search-container">
        <form method="get" class="search-form">
            <input type="text" name="q" placeholder="Search by name" value="{{ request.GET.q }}">

            <select name="category">
                <option value="">All Categories</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}" {% if request.GET.category == cat.id|stringformat:"s" %}selected{% endif %}>
                        {{ cat.name }}
                    </option>
                {% endfor %}
            </select>

            <button type="submit"><i class="fas fa-search"></i> Search</button>
        </form>
    </div> {% endcomment %}

    <div class="section-divider"></div>

    {% if products %}
        <div class="products-grid">
            {% for product in products %}
            <div class="product-card">
                <!-- Wishlist Button -->
                <form id="wishlist-form-{{ product.id }}" method="post" class="wishlist-form">
                    {% csrf_token %}
                    <button id="wishlist-btn-{{ product.id }}"
                            class="wishlist-btn {% if product in wishlist_products %}loved{% endif %}"
                            type="button"
                            onclick="toggleWishlist({{ product.id }})">
                        {% if product in wishlist_products %}‚ù§Ô∏è{% else %}ü§ç{% endif %}
                    </button>
                </form>

                <!-- Product Name -->
                <div class="product-header">
                    <h2 class="product-name">{{ product.name }}</h2>
                </div>

                <!-- Product Image -->
                {% if product.image %}
                <a href="{% url 'product_detail' product.id %}">
                    <img src="{{ product.image.url }}" class="product-image" alt="{{ product.name }}">
                </a>
                {% endif %}

                <!-- Product Details -->
                <p class="product-description">{{ product.description }}</p>
                <p class="product-price">‚Çπ{{ product.price }}</p>
                <p class="product-stock"><i class="fas fa-cubes"></i> Stock: {{ product.stock }}</p>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <form action="{% url 'add_to_cart' product.id %}" method="post">
                        {% csrf_token %}
                        <button type="submit" class="btn-cart"><i class="fas fa-cart-plus"></i> Add to Cart</button>
                    </form>
                    <form action="{% url 'checkout' %}" method="post">
                        {% csrf_token %}
                        <button type="submit" class="btn-buy"><i class="fas fa-bolt"></i> Buy Now</button>
                    </form>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="no-products">
            <i class="fas fa-box-open fa-3x" style="color: #4CAF50; margin-bottom: 15px;"></i>
            <p>This influencer has not added any products yet.</p>
        </div>
    {% endif %}

    <div class="section-divider"></div>

    <!-- JavaScript -->
    <script>
        // Mobile Menu Toggle
        const hamburger = document.getElementById('hamburger');
        const navLinks = document.getElementById('navLinks');
        const navOverlay = document.getElementById('navOverlay');

        function toggleMenu() {
            hamburger.classList.toggle('active');
            navLinks.classList.toggle('active');
            navOverlay.classList.toggle('active');
            document.body.style.overflow = navLinks.classList.contains('active') ? 'hidden' : '';
        }

        hamburger.addEventListener('click', toggleMenu);
        navOverlay.addEventListener('click', toggleMenu);

        // Close menu when clicking on a link
        const navLinkItems = navLinks.querySelectorAll('a');
        navLinkItems.forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    toggleMenu();
                }
            });
        });

        // Close menu on window resize if open
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768 && navLinks.classList.contains('active')) {
                toggleMenu();
            }
        });

        // Wishlist Toggle
        function toggleWishlist(productId) {
            fetch(`/orders/wishlist/toggle/${productId}/`, {
                method: 'POST',
                headers: {
                    'X-CSRFToken': getCSRFToken(),
                    'Accept': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                const btn = document.getElementById(`wishlist-btn-${productId}`);
                if (data.status === 'added') {
                    btn.classList.add('loved');
                    btn.textContent = '‚ù§Ô∏è';
                } else {
                    btn.classList.remove('loved');
                    btn.textContent = 'ü§ç';
                }
            });
        }

        function getCSRFToken() {
            const cookies = document.cookie.split(';');
            for (let cookie of cookies) {
                if (cookie.trim().startsWith('csrftoken=')) {
                    return cookie.trim().split('=')[1];;
                }
            }
            return '';
        }
    </script>

</body>
</html>


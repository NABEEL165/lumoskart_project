                                {% for i in "12345" %}
                                {% if forloop.counter <= product.rating %} <span class="star filled"></span>
                                    {% else %}
                                    <span class="star"></span>
                                    {% endif %}
                                    {% endfor %}
                                    <span class="rating-count">({{ product.rating }})</span>
